{% macro element(elementData) %}

{% from "govuk/components/input/macro.njk" import govukInput %}


{% if elementData.valid %}

{{ govukInput({
  label: {
    text: elementData.displayText
  },
  id: elementData.name,
  name: elementData.name,
  hint: {
    text: elementData.hint
  },
  value: elementData.value
}) }}

{% else %}

{{ govukInput({
  label: {
    text: elementData.displayText
  },
  id: elementData.name,
  name: elementData.name,
  hint: {
    text: elementData.hint
  },
  errorMessage: {
    text: elementData.validation.error
  },
  value: elementData.value
}) }}


{% endif %}

{% endmacro %}


